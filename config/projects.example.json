{
  "_comment": "EXAMPLE ONLY. init.sh will create projects.json based on your answers.",

  "webhook": {
    "port": 4000,
    "path": "/github",
    "secret": "<WEBHOOK_SECRET_OR_EMPTY>",
    "cloudflare": {
      "enabled": true,
      "rootDomain": "<ROOT_DOMAIN_EG_linkify.cloud>",
      "subdomain": "webhook",
      "localPort": 4000,
      "localPath": "/github",
      "protocol": "http",
      "tunnelName": "<OPTIONAL_TUNNEL_NAME>"
    }
  },

  "projects": [
    {
      "name": "example-dev",
      "gitUrl": "git@github.com:<USER>/<REPO>.git",
      "repo": "<USER>/<REPO>",
      "branch": "dev-branch",
      "workDir": "/opt/example-dev",
      "deployScript": "/opt/example-dev/deploy.sh",
      "deployArgs": ["dev"],
      "cloudflare": {
        "enabled": true,
        "rootDomain": "<ROOT_DOMAIN_EG_linkify.cloud>",
        "subdomain": "dev",
        "localPort": 3001,
        "localPath": "/",
        "protocol": "http",
        "tunnelName": "<TUNNEL_NAME_FOR_THIS_ROOT_DOMAIN>"
      }
    }
  ]
}
